<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/serving"
        style="@style/TextViewsAppearance"
        android:layout_gravity="center_vertical"
        tools:text="@string/servings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/reciep_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

    <TextView
        android:id="@+id/reciep_name"
        style="@style/TextViewsAppearance"
        app:layout_constraintBottom_toTopOf="@+id/serving"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Hello World!" />

    <TextView
        android:id="@+id/serving_number"
        style="@style/TextViewsAppearance"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/serving"
        app:layout_constraintStart_toEndOf="@+id/serving"
        app:layout_constraintTop_toTopOf="@+id/serving"
        app:layout_constraintVertical_bias="1.0"
        tools:text="8" />


</androidx.constraintlayout.widget.ConstraintLayout>
